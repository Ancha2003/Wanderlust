<% layout('layouts/boilerplate') %>
  <div class="row">
    <div class="col-8 offset-3">
      <h3>Create a New Listing</h3>
      <br><br>
      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" 
          class="form-label">Title</label>
          <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required />
          <div class="invalid-feedback">Please enter a valid Title</div>
        </div>
        <br /><br />
        <div class="mb-3">
          <label for="description" class="form-label">description</label>
          <textarea
          name="listing[description]"
          placeholder="enter description"
         class="form-control" required></textarea>
         <div class="invalid-feedback">Please enter a valid description</div>
        </div>
        <br /><br />
        <!-- <div class="mb-3">
          <label for="image" class="form-label">image</label>
          <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control" required/>
        </div> -->
        <br />
        <div class="mb-3">
          <label for="image" class="form-label">upload listing image</label>
          <input name="listing[image]"  type="file" class="form-control" required/>
        </div>
        <br>
        <div class="row">
          <div class="mb-3 col-md-4 col-md-8">
            <label for="price" class="form-label">price</label>
            <input name="listing[price]" placeholder="1020" type="number" class="form-control" required />        
            <div class="invalid-feedback">Please enter a valid Price</div>
          </div>
    
          <br />
          <div class="mb-3">
            <label for="country" class="form-label">country</label>
            <input name="listing[country]" placeholder="India" type="text" class="form-control" required/>
            <div class="invalid-feedback">Please enter a valid country name</div>
          </div>
        </div>
        <br /><br />
        <div>
          <label for="location" class="form-label">location</label>
          <input
          name="listing[location]"
          placeholder="Basti , Banda"
          type="text"
        class="form-control" required/>
        <div class="invalid-feedback">Please enter a valid location</div>
      </div>
        <br /><br />
        <button class="btn btn-dark add-btn">Add</button>
        <br> <br>
      </form>  
    </div>
  </div>
   